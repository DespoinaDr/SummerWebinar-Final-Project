@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" integrity="sha512-b2QcS5SsA8tZodcDtGRELiGv5SaKSk1vDHDaQRda0htPYWZ6046lr3kJ5bAAQdpV2mmA/4v0wQF9MyU6/pDIAg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" />
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SummerWebinars</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Mission">Mission</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">About Us</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid main-content">
        <div class="row">
            <!-- Left sidebar -->
            <div class="col-sm-2 p-0">
                <nav class="nav flex-column sidebar" style="height: calc(100vh - 150px)">
                    <a class="nav-link text-white" href="#" onclick="toggleSubMenu(event)">
                        <span class="submenu-toggle"></span>Profile
                    </a>
                    <div class="submenu" id="profileSubMenu">
                        <a class="nav-link text-white" href="#">View Profile</a>
                    </div>
                    <a class="nav-link text-white" href="@Url.Action("Webinars", "Student")">My Webinars</a>
                    <a href="@Url.Action("Logout", "User")" class="btn btn-primary">Logout</a>
                </nav>
            </div>
            <!-- Main content area -->
            <div class="col-md-10 position-relative">
                <!-- Content -->
                <div class="text-center mt-5">
                    <p>To see your webinars, click the <strong>My Webinars</strong> button in the sidebar.</p>
                </div>
            </div>
            <!-- Image area -->
            <div class="col-md-2">
                <div class="img-container">
                    <img src="~/img/webinars-icon.jpg" alt="Image" style="width: 200px; height: auto;">
                </div>
            </div>
        </div>
    </div>

    <script>
        function toggleSubMenu(event) {
            event.preventDefault(); // Prevent default link behavior
            let submenu = document.querySelector('#profileSubMenu');
            submenu.classList.toggle('submenu-active');
        }
    </script>

    <footer class="border-top footer text-muted custom-footer">
        <div class="container d-flex justify-content-between align-items-center">
            <div style="font-weight: bold; color: black;">
                &copy; 2024 - SummerWebinarApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
            <div class="stay-connected d-flex align-items-center">
                <span><strong>Contact Us:</strong></span>
                <ul class="list-inline mb-0 ml-2">
                    <li class="list-inline-item"><a href="https://www.facebook.com/YourFacebookPage" target="_blank"><img src="~/img/facebook-icon.png" alt="Facebook"></a></li>
                    <li class="list-inline-item"><a href="https://www.linkedin.com/company/aueb-coding-factory/posts/?feedView=all" target="_blank"><img src="~/img/linkedin-icon.png" alt="LinkedIn"></a></li>
                    <li class="list-inline-item"><a href="https://www.instagram.com/aueb.gr/" target="_blank"><img src="~/img/instagram-icon.png" alt="Instagram"></a></li>
                </ul>
            </div>
        </div>
    </footer>
</body>
</html>

